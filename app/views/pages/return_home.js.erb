$('.nav-box').css("border-top", "4px solid rgba(255, 255, 255, 0.9)");
$('.link').css("color", "white");
$('.link').css("text-shadow", "none");
$('.navbar-collapse').collapse("hide");
$("#collapseBody").animate({"height" : "0"}, 250);
$('#collapseBody').promise().done(function(){
    document.getElementById('collapseBody').innerHTML = "";
    $("#collapseBody").animate({"height" : "450"}, 700);
    $("#collapseBody").html("<%= escape_javascript(render partial: 'home', locals: { :remote => true } ) %>");
});
$('#home').css("border-top", "4px solid #00ACE6");
$('#return_home_link').css("text-shadow", "2px 2px 6px #00ACE6");
