<script>
  if ($('textarea').length > 0) {
    var data = $('textarea');
    $.each(data, function(i) {
      CKEDITOR.replace(data[i].id);
    });
  }
</script>
<%= form_for(@good_to_know) do |f| %>
  <% if @good_to_know.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@good_to_know.errors.count, "error") %> prohibited this good_to_know from being saved:</h2>

      <ul>
      <% @good_to_know.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="">
    <div class="form-group">
      <%= f.label :title, style:'color: #A239CA' %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content, style:'color: #A239CA' %><br>
      <%= f.text_area :content, class: "ckeditor"%>
    </div>
    <div class="form-group">
      <%= f.label :tags, "Tags (add/edit tags to make searching easier)", style:'color: #A239CA' %><br>
      <%= f.text_field :tags, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit 'Submit', :class=> "hollow button primary"%>
    </div>
  </div>
<% end %>
