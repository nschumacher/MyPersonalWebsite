<%= stylesheet_link_tag "contact", media: "all" %>

<div class="" style="border: 2px solid rgba(200,200,200,.2); padding: 40px 40px 50px 40px;">
  <!-- Navigation pane -->
  <div align="" style="">
    <%= render 'layouts/navigation' %>
  </div>

  <hr style="border-color: rgba(240,240,240,.4)">

  <!-- Intro Title -->
  <div class="intro">
    <div id="pageLabel">
      <h1 align="center" style="display: inline">Contact</h1>
    </div>
    <div id="pageSummary" class="pull-right">
       Send me a message and I will get back to you as soon as I can!
    </div>
  </div>

  <div class="row" style="margin-right: 0px;">
    <div class="col-sm-4">
      <div style="background-color: rgba(90,90,90,.7); margin-right: 10px; margin-left: -10px; padding: 10px">
        Personal Email: nick.schumacher07@gmail.com<br>
        Work Email: nicholas.schumacher@emc.com<br>
        nicholas.schumacher@rsa.com<br>
      </div>
    </div>
    <div class="col-sm-8" align="left" style="background-color: rgba(90,90,90,.7); padding: 15px">

      <%= simple_form_for @contact, :html => {:class => 'form-horizontal'} do |f| %>
        <div style="width: 300px">
          <%= f.input :name , :required => true %>
          
          <%= f.input :email, :required => true %>
          <%= f.input :message, :as => :text, :required => true, style:'width: 500px' %>
          
          <div class= "hidden">
            <%= f.input :nickname, :hint => 'Leave this field blank!' %>
          </div>
          <div align="left">
            </br>
            <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>