<%= stylesheet_link_tag "contact", media: "all" %>
<div id="tilt-out">
<div id="tilt-in" style="borde: 2px solid rgba(200,200,200,.2); padding: 40px 40px 30px 40px; overflow-y: auto">
  <!-- Navigation pane -->
  <div align="" style="">
    <%= render 'layouts/navigation' %>
  </div>

  <hr style="border-color: rgba(240,240,240,.4); box-shadow: 4px 2px 10px rgba(0,0,0,.6); margin-top: 0px">

<div style="max-height: 510px; overflow-y:auto; overflow-x: hidden; margin-bottom: 5px; padding-right: 10px;">
  <!-- Intro Title -->
  <div class="intro row">
    <div class="col-xs-12 col-md-3">
      <div id="pageLabel">
        <h1 align="center" style="margin-bottom: 15px;">Contact</h1>
      </div>
    </div>
    <div class="col-xs-12 col-md-9">
      <div id="pageSummary">
        Send me a message and I will get back to you as soon as I can!
      </div>
    </div>
  </div>


  <div class="row" style="margin-bottom: 10px; padding: 0px 15px;">
    <div class="col-sm-12 col-md-4" id="emails">
      <div style="background: rgba(50, 50, 50, 0.5); margin-bottom: 10px; padding: 10px; box-shadow: 4px 2px 10px rgba(0,0,0,.6);">
        Personal Email:<br>
          <span style="margin-left: 15px">nick.schumacher07@gmail.com</span><br>
        Work Email:<br>
          <span style="margin-left: 15px">nschumacher@ncaa.org</span><br>
          <span style="margin-left: 15px">nicholas.schumacher@emc.com</span><br>
          <span style="margin-left: 15px">nicholas.schumacher@rsa.com</span><br>
      </div>
    </div>
    <div class="col-sm-12 col-md-8" align="left" style="background: rgba(50, 50, 50, 0.5); padding: 15px; box-shadow: 4px 2px 10px rgba(0,0,0,.6);">

      <%= simple_form_for @contact, :html => {:class => 'form-horizontal'} do |f| %>
        <div>
          <%= f.input :name , :required => true %>

          <%= f.input :email, :required => true %>
          <%= f.input :message, :as => :text, :required => true %>

          <div class= "hidden">
            <%= f.input :nickname, :hint => 'Leave this field blank!' %>
          </div>
          <div align="left">
            </br>
            <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<hr style="border-color: rgba(240,240,240,.4); box-shadow: 4px 2px 10px rgba(0,0,0,.6); margin-bottom: 10px; margin-top: 0px">
  <div class="foot" align="right">
      <%= render 'layouts/myFooter' %>
  </div>
</div>
</div>
