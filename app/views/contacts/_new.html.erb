<%= stylesheet_link_tag "contact", media: "all" %>

  <!-- Intro Title -->
  <div class="intro row">
    <div class="col-xs-12 col-md-3">
      <div id="pageLabel">
        <h1 align="center" style="margin-bottom: 15px;">Contact</h1>
      </div>
    </div>
    <div class="col-xs-12 col-md-9">
      <div id="pageSummary">
        Send me a message and I will get back to you as soon as I can!<br>
        This page is still under construction. Please send me an email outside of using the form to reach me!
      </div>
    </div>
  </div>

<div class="container-fluid">
  <div class="row" style="margin-bottom: 10px;">
    <div class="col-sm-12 col-md-4" id="emails">
      <div id="email_box" style="background: rgba(90, 90, 90, 0.5);">
        Personal Email:<br>
          <span style="margin-left: 15px">nick.schumacher07@gmail.com</span><br>
        Work Email:<br>
          <span style="margin-left: 15px">nicholas.schumacher@emc.com</span><br>
          <span style="margin-left: 15px">nicholas.schumacher@rsa.com</span><br>
      </div>
    </div>
    <div class="col-sm-12 col-md-8" align="left" style="background: rgba(90, 90, 90, 0.4); padding: 15px;">

      <%= simple_form_for @contact, :html => {:class => 'form-horizontal'} do |f| %>
        <div>
          <%= f.input :name , :required => true, :class => 'input_field' %>

          <%= f.input :email, :required => true %>
          <%= f.input :message, :as => :text, :required => true, :class => 'input_field' %>

          <div class= "hidden">
            <%= f.input :nickname, :hint => 'Leave this field blank!' %>
          </div>
          <div align="left">
            </br>
            <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
